generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id       String    @id @default(uuid())
  title    String
  comments Comment[]
  datePosted DateTime
  published Boolean
}

model Comment {
  id     String @id @default(uuid())
  post   Post   @relation(fields: [postId], references: [id])
  postId String
  writer User   @relation(fields: [userId], references: [id])
  userId String
  dateWritten DateTime
}

model User {
  id       String    @id @default(uuid())
  username String    @unique
  password String
  comments  Comment[]
  isAuthor Boolean
}
